<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" ? />
    <title>@ViewData["Title"] - Евродом</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="icon" href="~/icon.ico" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script defer src="~/lib/fontawesome/js/solid.js"></script>
    <script defer src="~/lib/fontawesome/js/fontawesome.js"></script>
    <link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/solid.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top navbar-scroll">
            <div class="app-container container-fluid">
                <a asp-controller="home" asp-action="index" style="text-decoration:none; color:inherit"><i
                        class="fa-solid fa-house"></i> ЕВРОДОМ</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon d-flex justify-content-start align-items-center">
                    </span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Contacts"><i
                                    class="fa-regular fa-address-card"></i> Контакты</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Building" asp-action="Catalog"><i
                                    class="fa-solid fa-list"></i> Каталог строений</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Product" asp-action="Catalog"><i
                                    class="fa-solid fa-list"></i> Каталог товаров</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Order" asp-action="Manage"><i
                                        class="fa-solid fa-user-secret"></i> Панель администратора</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" style="width:100%; padding-bottom:4%;">
        @RenderBody()
    </main>
    <br />
    <br />
    <footer class="text-center py-3 position-absolute bottom-0 w-100">
        <hr />
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year Евродом. Все права защищены.</p>
        </div>
    </footer>
</body>

</html>
