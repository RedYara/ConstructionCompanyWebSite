@model Diploma.Application.CQRS.Queries.Orders.GetOrderListQuery.OrderListVm;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:3%">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Имя
                </th>
                <th>
                    Номер телефона
                </th>
                <th>
                    Действие
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-action="OrderComplete" asp-route-id="@item.Id" title="Заказ выполнен"><i class="fa-solid fa-check"></i></a>
                        @if (item.BuildingType == "House")
                        {
                            <a asp-controller="House" asp-action="Details" asp-route-id="@item.BuildingId" title="Просмотреть дом"><i class="fa-regular fa-eye"></i></a>
                        }
                        else
                        {
                            <a asp-controller="Bath" asp-action="Details" asp-route-id="@item.BuildingId" title="Просмотреть баню"><i class="fa-regular fa-eye"></i></a>                            
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>