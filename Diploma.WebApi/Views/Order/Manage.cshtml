@model Diploma.Application.CQRS.Queries.Orders.GetOrderListQuery.OrderListVm;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-container container-fluid" style="margin-top:3%">
    <div class="card">
        <div class="card-header">
            <p>Панель администратора</p>
        </div>
        <div class="card-body">
            <div class="btn-group">
                <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Строения
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Index">Список строений</a></li>
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Create">Добавить строение</a></li>
                      </ul>
                </div>
                <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                        Строения
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Index">Список групп</a></li>
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Create">Добавить тип групп</a></li>
                      </ul>
                </div>
                <a class="btn btn-primary" asp-controller="Order" asp-action="Manage">Заказы</a>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Имя
                </th>
                <th>
                    Номер телефона
                </th>
                <th>
                    Действие
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-action="OrderComplete" asp-route-id="@item.Id" title="Заказ выполнен"><i class="fa-solid fa-check"></i></a>
                            <a asp-controller="Building" asp-action="Details" asp-route-id="@item.BuildingId" title="Просмотреть здание"><i class="fa-regular fa-eye"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>