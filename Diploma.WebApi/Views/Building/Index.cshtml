@model Diploma.Application.CQRS.Queries.Buildings.GetBuildingsListQuery.BuildingListVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-container container-fluid" style="margin-top:3%">
    <div class="card">
        <div class="card-header">
            <p>Панель администратора</p>
        </div>
        <div class="card-body">
            <div class="btn-group">
                <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Строения
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Index">Список строений</a></li>
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Create">Добавить строение</a></li>
                      </ul>
                </div>
                <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                        Строения
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Index">Список групп</a></li>
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Create">Добавить тип групп</a></li>
                      </ul>
                </div>
                <a class="btn btn-primary" asp-controller="Order" asp-action="Manage">Заказы</a>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Превью строения</th>
                <th scope="col">Название строения</th>
                <th scope="col">Описание строения</th>
                <th scope="col">Размер строения</th>
                <th scope="col">Площадь строения</th>
                <th scope="col">Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model.Buildings){
            <tr>
                <td scope="row">
                    <img src="data:image/png;base64, @house.Preview" width="200px" height="200px" />
                </td>
                <td>
                    @house.Name
                </td>
                <td>
                    @house.Desciption...
                </td>
                <td>
                    @house.Size
                </td>
                <td>
                    @house.Square
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@house.Id" class="btn"><i class="fa fa-pencil-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>