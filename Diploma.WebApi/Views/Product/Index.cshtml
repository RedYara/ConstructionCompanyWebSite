@model Diploma.Application.CQRS.Queries.Products.GetProductListQuery.ProductListVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Список товаров";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-container container-fluid mt-4" >
    <div class="card">
        <div class="card-header">
            <p>Панель администратора</p>
        </div>
        <div class="card-body">
            <div class="d-flex">
                <div class="dropdown me-4">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Строения
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Index">Список строений</a></li>
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Create">Добавить строение</a></li>
                    </ul>
                </div>
                <div class="dropdown me-4">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                        Товары
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Список товаров</a></li>
                        <li><a class="dropdown-item" asp-controller="Product" asp-action="Create">Добавить товар</a></li>
                    </ul>
                </div>
                <div class="dropdown me-4">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                        Типы групп
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Index">Список типов</a></li>
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Create">Добавить тип групп</a></li>
                    </ul>
                </div>
                <a class="btn btn-primary" asp-controller="Order" asp-action="Manage">Заказы</a>
            </div>
        </div>
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">Превью товара</th>
                <th scope="col">Название товара</th>
                <th scope="col">Описание товара</th>
                <th scope="col">Цена</th>
                <th scope="col">Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td scope="row">
                        <img src="data:image/png;base64, @product.Preview" width="200px" height="200px" />
                    </td>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Description...
                    </td>
                    <td>
                        @product.Price₽
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary"><i class="fa fa-pencil-alt"></i></a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can" style="color: #1e3050;"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>