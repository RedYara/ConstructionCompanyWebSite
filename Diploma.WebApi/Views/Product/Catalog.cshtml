@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model IPagedList<Diploma.Domain.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:3%">
    <h1 class="text-center">Каталог товаров</h1>

    <!-- Sort by name -->
    <div class="d-flex align-items-center mb-3">
        <label class="me-2">Сортировка по имени:</label>
        <a href="@Url.Action("Catalog", new { sortBy = ViewBag.SortBy == "name" ? "name_desc" : "name" })" class="btn btn-link btn-sort">
            <i class="fas @((ViewBag.SortBy == "name" || ViewBag.SortBy == "name_desc") && ViewBag.SortByDescending ? "fa-sort-down" : "fa-sort-up")"></i>
        </a>
    </div>

    <!-- Sort by price -->
    <div class="d-flex align-items-center mb-3">
        <label class="me-2">Сортировка по цене:</label>
        <a href="@Url.Action("Catalog", new { sortBy = ViewBag.SortBy == "price" ? "price_desc" : "price" })" class="btn btn-link btn-sort">
            <i class="fas @((ViewBag.SortBy == "price" || ViewBag.SortBy == "price_desc") && ViewBag.SortByDescending ? "fa-sort-down" : "fa-sort-up")"></i>
        </a>
    </div>

    <!-- Search -->
    <div class="mt-3">
        <form action="@Url.Action("Catalog")" method="get" class="form-inline">
            <div class="form-group mb-2">
                <input type="text" name="search" class="form-control" placeholder="Поиск" value="@ViewBag.SearchTerm">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Поиск</button>
        </form>
    </div>

    <!-- Product List -->
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" style="text-decoration:none; color:black;">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-img"><img src="data:image/png;base64, @product.Preview" loading="lazy" height="350" width="375" /></p>
                            <p class="card-text">@product.Description...</p>
                            <p class="card-text">Цена: @product.Price₽</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <div class="mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Catalog", new { page, sortBy = ViewBag.SortBy }))
    </div>
</div>