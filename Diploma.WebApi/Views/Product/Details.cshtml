@model Diploma.Application.CQRS.Queries.Products.GetProductDetailsQuery.ProductDetailsVm
@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">Price: $@Model.Price</p>
                <img src="data:image/png;base64, @Model.Preview" class="card-img-top" alt="Product Image" />
            </div>
        </div>
    </div>
</div>