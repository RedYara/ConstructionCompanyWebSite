@model Diploma.Application.CQRS.Queries.GroupTypes.GetGroupTypeListQuery.GroupTypeListVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-container container-fluid" style="margin-top:3%">
    <div class="card">
        <div class="card-header">
            <p>Панель администратора</p>
        </div>
        <div class="card-body">
            <div class="d-flex">
                <div class="dropdown me-4">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Строения
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Index">Список строений</a></li>
                        <li><a class="dropdown-item" asp-controller="Building" asp-action="Create">Добавить строение</a></li>
                      </ul>
                </div>
                <div class="dropdown me-4">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                        Типы групп
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Index">Список типов</a></li>
                        <li><a class="dropdown-item" asp-controller="GroupType" asp-action="Create">Добавить тип групп</a></li>
                      </ul>
                </div>
                <a class="btn btn-primary" asp-controller="Order" asp-action="Manage">Заказы</a>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Название типа группы</th>
                <th scope="col">Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var groupType in Model.GroupTypeList){
            <tr>
                <td>
                    @groupType.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@groupType.Id" class="btn"><i class="fa fa-pencil-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>