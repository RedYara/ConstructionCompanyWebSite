@model Diploma.WebApi.Models.Account.LoginRequest
@{
    ViewData["Title"] = "Вход";
    if (User.Identity.IsAuthenticated == false)
    {
        
    }
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Вход</h5>
                    <form asp-action="LoginUser" method="post">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, "Логин", new {@class = "control-label"})
                            <input asp-for="Username" class="form-control" type="text" id="inputUsername" placeholder="Введите логин" required />
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Пароль", new {@class = "control-label"})
                            @Html.PasswordFor(m => m.Password, new {id = "inputPassword", @class = "form-control", required = true, placeholder = "Введите пароль"})
                        </div>
                        <div class="form-control border-0">
                            Нет аккаунта? <a asp-action="register">Зарегистрироваться</a>
                        </div>
                            <button class="btn w-100 mt-2 btn-outline-primary btn-block text-uppercase " type="submit">Войти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
